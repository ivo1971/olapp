<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ilu.olapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>olapp</name>
    <description>
        An application to use on the yearly OLENG weekend.
    </description>
    <author email="ivo.ivo@olapp.comm" href="http://olapp.com">
        Ivo
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="res/android//icons/ldpi.png" density="ldpi" />
        <icon src="res/android/icons/mdpi.png" density="mdpi" />
        <icon src="res/android/icons/hdpi.png" density="hdpi" />
        <icon src="res/android/icons/xhdpi.png" density="xhdpi" />
        <icon src="res/android/icons/xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/icons/xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.2.2" />
    <engine name="browser" spec="~4.1.0" />
    <preference name="Fullscreen" value="true" />
    <preference name="LogLevel" value="VERBOSE"/>

</widget>

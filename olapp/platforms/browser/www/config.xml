<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ilu.olapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>olapp</name>
    <description>
        An application to use on the yearly OLENG weekend.
    </description>
    <author email="ivo.ivo@olapp.comm" href="http://olapp.com">
        Ivo
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Fullscreen" value="true" />
    <preference name="LogLevel" value="VERBOSE" />
</widget>
